<ol class="breadcrumb">
    <li>{{#link-to "releases"}}Releases{{/link-to}}</li>
    <li>{{model.name}}</li>
</ol>

<div class="row">
    <div class="col-sm-8">
        <form class="form-horizontal" role="form">
            {{#bs-form-group validation=nameValidation}}
                <label class="control-label col-sm-2" for="name">Name</label>
                <div class="col-sm-10">
                    {{bs-input value=model.name id='name' placeholder='Enter release name'}}
                    {{#each model.errors.name as |error|}}
                        <span class="help-block">{{error.message}}</span>
                    {{/each}}
                </div>
            {{/bs-form-group}}
            <div class="form-group">
                <label class="control-label col-sm-2" for="desc">Description</label>
                <div class="col-sm-10">
                    {{tinymce-editor value=model.description}}
                </div>
            </div>
            <div class="form-group pull-right">
                <div class="col-sm-12">
                    <button type="button" class="btn btn-primary" {{action "save"}}>Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

